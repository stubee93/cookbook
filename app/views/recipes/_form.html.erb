<%= form_for @recipe, html: { multipart: true } do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= @recipe.errors.count %> hiba miatt nem sikerült a recept mentése:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div>
    <%= f.label :category %><br />
    <%= f.collection_select :subcategory_id, @subcategories, :id, :name %><br /><br />
    <%= f.label :recipe_name %><br />
    <%= f.text_field :name, size: "51" %><br /><br />
    <%= f.label :image %><br />
    <%= f.file_field :image %><br />
    <%= f.label :time %><br />
    <%= f.text_field :time, size: "51" %><br /><br />
    <%= f.label :difficulty %><br />
    <%= f.collection_select(:level_id, Level.all,:id,:name) %>
    <br/><br/>
    <%= f.label :quantity %><br/>
    <%= f.text_field :quantity %><br /><br />
    <%= f.label :ingredients %><br />
    <%= f.text_area :ingredients, cols: "50", rows: "10"  %><br /><br />
    <%= f.label :instructions %><br />
    <%= f.cktext_area :instructions %><br /><br />
</div>
  <div class="actions">
    <%= f.submit "Küldés" %>
  </div>
<% end %>
